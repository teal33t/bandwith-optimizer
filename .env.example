# App secret key (generate a secure random key for production)
SECRET_KEY="change-me-to-a-secure-random-key"

# Database connection string
# SQLite (default)
SQLALCHEMY_DATABASE_URI="sqlite:///app.db"
# MySQL
# SQLALCHEMY_DATABASE_URI="mysql://username:password@localhost/dbname"
# PostgreSQL
# SQLALCHEMY_DATABASE_URI="postgresql://username:password@localhost/dbname"

# App name
APP_NAME="Bandwidth Optimizer"

# App theme
APP_THEME="flatly.css"

# Authentication type (AUTH_DB, AUTH_LDAP, AUTH_OAUTH, AUTH_OID, AUTH_REMOTE_USER)
AUTH_TYPE="AUTH_DB"

# CSRF protection
CSRF_ENABLED=True

# SQLAlchemy track modifications
SQLALCHEMY_TRACK_MODIFICATIONS=False
